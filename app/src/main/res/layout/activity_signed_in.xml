<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="410dp"
    android:layout_height="match_parent"
    tools:context=".SignedInActivity"

android:background="#51BB86FC"
    android:layout_marginTop="00dp"
    android:layout_marginHorizontal="0dp"
    android:orientation="vertical">


    <pl.droidsonroids.gif.GifImageView
        android:layout_width="match_parent"
        android:layout_height="420dp"
        android:id="@+id/gif"
        android:src="@drawable/isolation"


        />
    <TextView
        android:id="@+id/result"
        android:layout_width="350dp"
        android:layout_height="120dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:text="Home Isolation"

        android:layout_marginLeft="40dp"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:textStyle="bold" />

        <Button
            android:layout_width="350dp"
            android:layout_height="50dp"
            android:layout_below="@+id/result"
            android:id="@+id/btnIsolationTips"
            android:layout_marginTop="00dp"
            android:backgroundTint="#D3D3D3"
            android:layout_marginLeft="22dp"
            android:text="Home Isolation Tips"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:textSize="20dp"/>

        <Button
            android:layout_width="350dp"
            android:layout_height="50dp"
            android:layout_below="@+id/btnIsolationTips"
            android:textColor="@color/black"
            android:backgroundTint="#D3D3D3"
            android:layout_marginLeft="22dp"
            android:id="@+id/btnBookAppointment"
            android:textAlignment="textStart"
            android:textAllCaps="false"
            android:text="Book Appointment With Doctor"
            android:textSize="19dp"/>

        <Button
            android:layout_width="350dp"
            android:layout_height="50dp"
            android:id="@+id/btnVaccination"
            android:layout_below="@id/btnBookAppointment"
            android:backgroundTint="#D3D3D3"
            android:layout_marginLeft="22dp"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:text="Vaccination "
            android:textSize="20dp"/>

        <Button
            android:layout_width="350dp"
            android:layout_height="50dp"
            android:textColor="@color/black"
            android:layout_below="@+id/btnVaccination"
            android:textAllCaps="false"
            android:layout_marginLeft="22dp"
            android:backgroundTint="#D3D3D3"
            android:id="@+id/btnQuickCheckup"
            android:text="A Quick Checkup"
            android:textSize="20dp"/>

    <Button
        android:id="@+id/btn_sign_out"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_centerInParent="true"
        android:layout_below="@id/btnQuickCheckup"
        android:layout_marginTop="80dp"
        android:layout_marginStart="40dp"
        android:textStyle="bold"
        android:layout_marginEnd="40dp"
        android:background="@drawable/button"
        android:text="@string/sign_out"
        android:textColor="@color/white" />

</RelativeLayout>


