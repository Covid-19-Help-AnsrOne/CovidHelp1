<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignedInActivity"


    android:layout_marginTop="0dp"
    android:layout_marginHorizontal="0dp"
    android:orientation="vertical">




    <TextView
        android:id="@+id/result"
        android:layout_width="350dp"
        android:layout_height="153dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/rec"
        android:text="Home Isolation"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="28dp"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:textStyle="bold" />

        <Button
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:id="@+id/btnIsolationTips"
            android:layout_marginTop="80dp"
            android:backgroundTint="#D3D3D3"
            android:layout_marginLeft="28dp"
            android:text="Home Isolation Tips"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:textSize="20dp"/>

        <Button
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:backgroundTint="#D3D3D3"
            android:layout_marginLeft="28dp"
            android:id="@+id/btnBookAppointment"
            android:textAllCaps="false"
            android:text="Book Appointment With Doctor"
            android:textSize="20dp"/>

        <Button
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:id="@+id/btnVaccination"
            android:backgroundTint="#D3D3D3"
            android:layout_marginLeft="28dp"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:text="Vaccination "
            android:textSize="20dp"/>

        <Button
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textAllCaps="false"
            android:layout_marginLeft="28dp"
            android:backgroundTint="#D3D3D3"
            android:id="@+id/btnQuickCheckup"
            android:text="A Quick Checkup"
            android:textSize="20dp"/>

    <Button
        android:id="@+id/btn_sign_out"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginTop="30dp"
        android:layout_marginStart="40dp"
        android:textStyle="bold"
        android:layout_marginEnd="40dp"
        android:background="@drawable/button"
        android:text="@string/sign_out"
        android:textColor="@color/white" />

</LinearLayout>


